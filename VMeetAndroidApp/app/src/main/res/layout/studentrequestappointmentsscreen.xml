<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">



        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Type"
            android:textColor="#0000FF"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>



        <RadioGroup
            android:id="@+id/radiogroup_appointment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/radiobutton_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textStyle="bold"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radiobutton_important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Important"
                android:textStyle="bold"
                android:textColor="#000000" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occurance"
            android:textColor="#0000FF"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>



        <RadioGroup
            android:id="@+id/radiogroup_appointment_occurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/radiobutton_once"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Once"
                android:textStyle="bold"
                android:checked="true"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radiobutton_weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:textStyle="bold"
                android:textColor="#000000" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"/>


        <Spinner
            android:id="@+id/sp_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>


        <DatePicker
            android:id="@+id/simpleDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"/>

        <TimePicker
            android:id="@+id/simpleTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"/>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>


</ScrollView>